package com.qait.automation.pomTatoc;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class popUp {
	WebDriver driver;
	dragAround drags;
	popUpObject pop;
	public void isPopUpCheck(WebDriver driver) throws InterruptedException {
		drags =new dragAround();
		drags.isDragged(driver);
		Thread.sleep(1000);
		pop =new popUpObject(driver);
		Thread.sleep(1000);
		pop.popUp();
	}
	@Test(groups="tatocTest")
	public void popUpCheck() throws InterruptedException {
		isPopUpCheck(driver);
		Assert.assertEquals( driver.getCurrentUrl(),"http://10.0.1.86/tatoc/basic/cookie" );
	}
	@Test
	public void failCase() {
		pop.clickingOnProceed();
		Assert.assertEquals(driver.getCurrentUrl(),"http://10.0.1.86/tatoc/error");
	}
	
	@BeforeClass
	public void launchBrowser() throws InterruptedException {
		System.setProperty("webdriver.chrome.driver","/home/qainfotech/Downloads/chromedriver");
		driver=new ChromeDriver();
		Thread.sleep(1000);
	}
	@AfterClass
	public void closeBrowser(){
		driver.quit();
	}
}
